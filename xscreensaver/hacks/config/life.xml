<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="life" _label="LifeSaver">

  <command arg="-root"/>

  <number id="delay" type="slider" arg="-delay %"
          _label="Frame rate" _low-label="Low" _high-label="High"
          low="0" high="100000" default="30000"
          convert="invert"/>

  <number id="scale" type="slider" arg="-scale %"
          _label="Cell size" _low-label="Small" _high-label="Large"
          low="1" high="32" default="2"/>

  <_description>
Conway's Game of Life as a screensaver

Written by Julian Schrittwieser, 2012
  </_description>
</screensaver>
